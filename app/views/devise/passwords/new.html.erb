<div class="vertically-centered-container flex-container log-in">
 <div class="vertically-centered dark-purple-background">
<%= image_tag("whitelogo.png", :alt => "BarCrawlz", :class => "sign-in-logo", :href => "/") %>
</div>

<div class="vertically-centered login-padding ">
<div>
<h2 class= "XL-text">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "EMAIL ME", :class=>"button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
